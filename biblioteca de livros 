        " #Sistema de Gerenciamento de Livros\n",
        "\n",
        "from collections import Counter\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "\n",
        "#  Definir a classe Livro\n",
        "\n",
        "class Livro:\n",
        "    def __init__(self, titulo, autor, genero, quantidade):\n",
        "        self.titulo = titulo\n",
        "        self.autor = autor\n",
        "        self.genero = genero\n",
        "        self.quantidade = quantidade\n",
        "\n",
        "    def __str__(self):\n",
        "        return f\"Título: {self.titulo}, Autor: {self.autor}, Gênero: {self.genero}, Quantidade: {self.quantidade}\"\n",
        "\n",
        "\n",
        "\n",
        "#   lista de livros\n",
        "\n",
        "livros = []\n",
        "\n",
        "\n",
        "\n",
        "# Funções para gerenciar os livros\n",
        "\n",
        "\n",
        "def cadastrar_livro():\n",
        "    titulo = input(\"Digite o título do livro: \")\n",
        "    autor = input(\"Digite o autor: \")\n",
        "    genero = input(\"Digite o gênero: \")\n",
        "    try:\n",
        "        quantidade = int(input(\"Digite a quantidade disponível: \"))\n",
        "    except ValueError:\n",
        "        print(\"Quantidade inválida! Usando 1 por padrão.\")\n",
        "        quantidade = 1\n",
        "    novo_livro = Livro(titulo, autor, genero, quantidade)\n",
        "    livros.append(novo_livro)\n",
        "    print(f\"\\nLivro '{titulo}' cadastrado com sucesso!\\n\")\n",
        "\n",
        "\n",
        "def listar_livros():\n",
        "    if not livros:\n",
        "        print(\"\\nNenhum livro cadastrado.\\n\")\n",
        "        return\n",
        "    print(\"\\nLista de Livros:\\n\")\n",
        "    for livro in livros:\n",
        "        print(livro)\n",
        "    print()\n",
        "\n",
        "\n",
        "def buscar_livro():\n",
        "    titulo = input(\"Digite o título do livro que deseja buscar: \")\n",
        "    encontrados = [livro for livro in livros if livro.titulo.lower() == titulo.lower()]\n",
        "    if encontrados:\n",
        "        print(\"\\nLivro(s) encontrado(s):\\n\")\n",
        "        for livro in encontrados:\n",
        "            print(livro)\n",
        "    else:\n",
        "        print(f\"\\nNenhum livro encontrado com o título '{titulo}'.\\n\")\n",
        "\n",
        "\n",
        "\n",
        "# Função para gerar gráfico\n",
        "\n",
        "def gerar_grafico_generos():\n",
        "    if not livros:\n",
        "        print(\"\\nNenhum livro cadastrado para gerar o gráfico.\\n\")\n",
        "        return\n",
        "\n",
        "    generos = [livro.genero for livro in livros]\n",
        "    contagem_generos = Counter(generos)\n",
        "\n",
        "    plt.bar(contagem_generos.keys(), contagem_generos.values(), color='skyblue')\n",
        "    plt.xlabel(\"Gênero\")\n",
        "    plt.ylabel(\"Quantidade de Livros\")\n",
        "    plt.title(\"Quantidade de Livros por Gênero\")\n",
        "    plt.show()\n",
        "\n",
        "\n",
        "\n",
        "# Menu interativo\n",
        "\n",
        "def menu():\n",
        "    while True:\n",
        "        print(\"===== Sistema de Gerenciamento de Livros =====\")\n",
        "        print(\"1. Cadastrar novo livro\")\n",
        "        print(\"2. Listar todos os livros\")\n",
        "        print(\"3. Buscar livro pelo título\")\n",
        "        print(\"4. Gerar gráfico de livros por gênero\")\n",
        "        print(\"5. Sair\")\n",
        "        escolha = input(\"Escolha uma opção: \")\n",
        "\n",
        "        if escolha == \"1\":\n",
        "            cadastrar_livro()\n",
        "        elif escolha == \"2\":\n",
        "            listar_livros()\n",
        "        elif escolha == \"3\":\n",
        "            buscar_livro()\n",
        "        elif escolha == \"4\":\n",
        "            gerar_grafico_generos()\n",
        "        elif escolha == \"5\":\n",
        "            print(\"Saindo do sistema...\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Opção inválida! Tente novamente.\\n\")\n",
        "\n",
        "\n",
        "\n",
        "# Executar o sistema\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    menu()\n"
      ]
    }
  ]
}